@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="admin" asp-controller="Servicess" asp-action="Create">Create</a>
        </div>
        <div class="col-log-12">
            <table class="table">
                <thead>
                    <tr class="mr-2">
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">BannerText</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        @*<th scope="col">User</th>
                        <th scope="col">Category</th>*@



                    </tr>
                </thead>
                <tbody class="mr-2">
                    @{ int i = 0;}
                    @foreach (var item in Model)
                    {
                        i++;
                    <tr class="mr-2">
                        <th scope="row">@i</th>
                        <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="max-width:250px; max-height:350px" /></td>
                        <td>@item.BannerText</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        @*<td>@item.User</td>
        <td>@item.Category</td>*@


                        <td>
                            <a class="btn btn-success" asp-area="admin" asp-controller="Servicess" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-area="admin" asp-controller="Servicess" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>

                        </td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>
